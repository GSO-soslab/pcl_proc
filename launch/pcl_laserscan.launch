<launch>
     <node name="pcl_to_laser" pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node">
        <remap from="scan" to="/alpha_rise/msis/scan"/>
        <remap from="cloud_in" to="/alpha_rise/msis/pointcloud"/>

        <rosparam>
                target_frame: alpha_rise/ping360_link
                transform_tolerance: 0.01
                min_height: 0.0
                max_height: 1.0

                angle_min: -3.14
                angle_max: 3.14
                angle_increment: 0.0087
                scan_time: 3
                range_min: 5
                range_max: 20
                use_inf: true

                concurrency_level: 1
        </rosparam>
  </node>
</launch>